<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!-- 
      Configuration for communicating with Salesforce.
      This must match with configuration within Salesforce.
      Refer to the documentation for more details.
    -->
    <add key="AssertionConsumerServiceURL" value="https://login.salesforce.com"/>
    <add key="SPTargetURL" value="https://login.salesforce.com"/>
    <add key="Issuer" value="www.idp.com"/>
    <add key="SalesforceLoginID" value="YOUR-SALESFORCE-USERNAME"/>
  </appSettings>
  <connectionStrings/>
  <system.web>
    <!-- 
            Set compilation debug="true" to insert debugging 
            symbols into the compiled page. Because this 
            affects performance, set this value to true only 
            during development.
        -->
    <compilation debug="true" targetFramework="4.0"/>
    <authentication mode="Forms">
      <forms name="salesforceidp" loginUrl="login.aspx">
        <credentials passwordFormat="Clear">
          <user name="idp-user" password="password"/>
        </credentials>
      </forms>
    </authentication>
    <authorization>
      <deny users="?"/>
    </authorization>
    <customErrors mode="Off"/>
    <trace enabled="true" writeToDiagnosticsTrace="true"/>
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="TextWriter"/>
      </listeners>
    </trace>
    <sources>
      <source name="ComponentSpace.SAML2" switchValue="Verbose">
        <listeners>
          <add name="TextWriter"/>
        </listeners>
      </source>
      <source name="System.Security.Cryptography.Xml.SignedXml" switchValue="Verbose">
        <listeners>
          <add name="TextWriter"/>
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="TextWriter" type="System.Diagnostics.TextWriterTraceListener" initializeData="c:\temp\logs\idp.log"/>
    </sharedListeners>
  </system.diagnostics>
</configuration>